{
  "compilerOptions": {
    "rootDir": ".",
    "moduleResolution": "Bundler",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowJs": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "module": "ES2015",
    "target": "ESNext",
    "esModuleInterop": true,
    "lib": ["dom", "esnext", "ES2019.Object", "dom.iterable"]
  },
  "include": ["common", "web", "core", "headless", "deposit", "global.d.ts"],
  "exclude": ["node_modules", "dist", "**/__tests__", "**/*.test.ts"]
}
