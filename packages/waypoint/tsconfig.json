{
  "compilerOptions": {
    "rootDir": "src",

    "moduleResolution": "Bundler",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "sourceMap": true,

    "composite": true,
    "declaration": true,
    "declarationDir": "dist/types",

    "module": "ES2015",
    "target": "ES2015",
    "esModuleInterop": true,
    "lib": ["dom", "esnext", "ES2019.Object"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
